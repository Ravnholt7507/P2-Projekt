  // }
  // patientlist.innerhtml = '<datalist id="patients">'+ dummyvar + '</datalist>';  
  patientslist = document.createElement('datalist');
  patientslist.id = 'patients';
  for (index in jsonData) {
    var option = document.createElement('option');
